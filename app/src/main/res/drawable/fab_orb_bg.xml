<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- soft outer glow -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="#202B2B2B"/>
        </shape>
    </item>

    <!-- main orb gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="56dp"
                android:centerX="35%"
                android:centerY="35%"
                android:startColor="#FF2B2B2B"
                android:centerColor="#FF1F1F1F"
                android:endColor="#FF141414"/>
        </shape>
    </item>

    <!-- subtle top highlight -->
    <item android:top="6dp" android:left="6dp" android:right="6dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>
</layer-list>
