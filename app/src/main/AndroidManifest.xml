<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.tradewind.visionagent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Network -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Foreground service + types -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION"/>
    <!-- Uncomment ONLY if you actually play audio via MediaPlayer/ExoPlayer/TTS session -->
    <!-- <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"/> -->

    <!-- Audio + UX -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VisionAgent">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Live voice service (MIC). Add |mediaPlayback in type only if you actually play audio continuously -->
        <service
            android:name="com.tradewind.visionagent.audio.LiveS2SService"
            android:exported="false"
            android:foregroundServiceType="microphone"
            android:stopWithTask="false" />

        <!-- MediaProjection host (SCREEN CAPTURE) -->
        <service
            android:name="com.tradewind.visionagent.perception_exec.ScreenCaptureService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection"
            android:stopWithTask="false" />

        <!-- Accessibility service (keep aligned with actual usage) -->
        <service
            android:name="com.tradewind.visionagent.perception_exec.VisionAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config"/>
        </service>

    </application>
</manifest>
